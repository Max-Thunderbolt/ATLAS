# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:1234

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*,application/json

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
WEATHER_API_KEY=your-weather-api-key

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/llm_tools

# Tool Configuration
TOOL_TIMEOUT=30000
MAX_CONCURRENT_TOOLS=5
ENABLE_BATCH_EXECUTION=true
